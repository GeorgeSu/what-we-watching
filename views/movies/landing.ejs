<% include partials/header %>

<div class="container lobbyForm">
    <form action="/movies/lobbies/new" method="GET">
        <button type="submit" class="lobbySubmit btn btn-dark btn-lg btn-block createLobby">Create Lobby</button>
    </form>
</div>

<div class="container lobbyForm">
    <form action="/movies/lobbies" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="lobbyName" placeholder="Lobby Name" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="lobbyPassword" placeholder="Lobby Password (if private)">
        </div>
        <div class="form-group">
            <button type="submit" class="lobbySubmit btn btn-dark btn-lg btn-block">Join Lobby</button>
        </div>
    </form>
</div>

