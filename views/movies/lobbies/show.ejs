<% include ../partials/header %>

<div class="container-fluid">
    <h1 id="lobbyHeading"> <%= lobby.name %> </h1>
    <div>
        <h2>Genre: </h2>
    </div>
    
    <div class="row">
        <!--Lobby Nominations Table-->
        <div class="nominations col-7">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Current Nominations</th>
                    </tr>
                </thead>
                <tbody>
                    <!--TODO: Add Javascript Template for Nominations -->
                    <tr>
                        <td>Nominations</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!--Lobby Members Table-->
        <div class="col-5">
            <table class="table table-light">
                <thead>
                    <tr>
                        <th scope="col">Lobby Members</th>
                    </tr>
                </thead>
                <tbody>
                    <!--TODO: Add Javascript Template for Members -->
                    <tr>
                        <td>Members</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    
    <!--Text Input Form for Nominating Things-->
    <form id="nominationForm">
        <div class="form-group">
            <h6>Nomination: </h6>
            <input class="form-control" type="text" name="newNomination" placeholder="Enter Nomination Here">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-secondary">Add Nomination</button>
        </div>
    </form>
    
    <!--Maximum Nominations Selector-->
    <div class="form-group">
        <label for="maxNoms">Maximum Nominations Per Member:</label>
        <select class="form-control" id="maxNoms" name="maxNoms">
            <option>0</option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
        </select>
    </div>
</div>

<div id="lobbyCommands" class="container">
    <!--TODO: Group Start/Stop buttons into one button (should have 2 buttons: 1 for nominating, 1 for voting), and toggle functionality with Javascript -->
    <div>
        <button id="startNominations" class="vote-buttons btn btn-primary btn-lg">Start Nominating</button>
        <button id="stopNominations" class="vote-buttons btn btn-primary btn-lg">Stop Nominating</button>
        <button id="startVotes" class="vote-buttons btn btn-success btn-lg">Start Voting</button>
        <button id="stopVotes" class="vote-buttons btn btn-danger btn-lg">Stop Voting</button>
    </div>
    
    <button id="countVotes" class="vote-buttons btn btn-info btn-lg">Count Votes</button>
    
    <button id="newElection" type="button" class="btn btn-outline-light btn-lg btn-block">New Election</button>
    
    <button id="leaveLobby" type="button" class="btn btn-danger">Leave Lobby</button>
</div>

<% include ../partials/footer %>